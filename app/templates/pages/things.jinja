{#=====================================================
  Things list page
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - All Things

{% endblock %}


{% block content %}

    <h1>Things...</h1>


    <article>

        <ul>
            {% for thing in things %}

                <li>
                    <a href="/name/{{ todo.id }}">
                        {{ thing.name }}
                    </a>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>


    <article>

        <h3>Add a New task...</h3>

        <form action="/add" method="POST">

    <input
        type="text"
        name="task"
        placeholder="Enter a new task"
        required
    >

    <input
        type="date"
        name="due_date"
        placeholder="Due date"
    >
            <button>Add the Thing</button>

        </form>

    </article>

{% endblock %}

